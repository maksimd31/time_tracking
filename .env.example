# Пример файла окружения для production
# Скопируйте как .env и заполните значениями

# Общие
DEBUG='False'
SECRET_KEY='change_me_to_strong_random_secret'
ALLOWED_HOSTS='example.com,www.example.com'
CSRF_TRUSTED_ORIGINS='https://example.com,https://www.example.com'

# БД (PostgreSQL)
DB_ENGINE='django.db.backends.postgresql'
DB_NAME='time_tracking'
DB_USER='time_user'
DB_PASS='StrongDbPassword'
DB_HOST='127.0.0.1'
DB_PORT='5432'

# Email (SMTP)
EMAIL_BACKEND='django.core.mail.backends.smtp.EmailBackend'
EMAIL_HOST='smtp.gmail.com'
EMAIL_PORT='587'
EMAIL_USE_TLS='True'
EMAIL_HOST_USER='user@example.com'
EMAIL_HOST_PASSWORD='app_password'

# Соц. авторизация (заполните своими значениями) — оставьте пустым если не используете
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=''
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=''
SOCIAL_AUTH_VK_OAUTH2_KEY=''
SOCIAL_AUTH_VK_OAUTH2_SECRET=''
SOCIAL_AUTH_VK_OAUTH2_REDIRECT_URI='https://example.com/vkid/callback/'
SOCIAL_AUTH_YANDEX_OAUTH2_KEY=''
SOCIAL_AUTH_YANDEX_OAUTH2_SECRET=''

# Celery / Redis
CELERY_BROKER_URL='redis://127.0.0.1:6379/0'
CELERY_RESULT_BACKEND='redis://127.0.0.1:6379/1'

# Логи (опционально)
LOG_LEVEL='INFO'
LOG_DIR='/srv/time_tracking/logs'

# Media root (если храните вне каталога приложения)
# MEDIA_ROOT='/srv/time_tracking/media'

# SSL настройки (включайте после подтверждения работы HTTPS)
SECURE_SSL_REDIRECT='True'
SECURE_HSTS_SECONDS='0'

# Оптимизации
ENABLE_TEMPLATE_CACHE='True'

# Redis Cache (django-redis)
REDIS_CACHE_URL='redis://127.0.0.1:6379/2'
CACHE_KEY_PREFIX='tt'
CACHE_DEFAULT_TIMEOUT='300'
CACHE_SHORT_TIMEOUT='60'
CACHE_LONG_TIMEOUT='3600'
USE_CACHED_SESSIONS='False'
ENABLE_SITE_CACHE='False'
CACHE_MIDDLEWARE_SECONDS='60'
# REDIS_CACHE_PASSWORD=''  # если включите пароль в redis.conf
